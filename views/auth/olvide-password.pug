extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")= pagina

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-3")
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Correo Electronico
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Escribe tu Correo aqui" type="email" name="email") 

                    div(class="flex items-center justify-evenly")
                        a(href="/auth/login" class="text-gray-500 text-sm") Inicia Sesion 
                        a(href="/auth/registro" class="text-gray-500 text-sm") Crear cuenta

                    input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer border rounded-md")